{
  "name": "mcp-strudel-kit",
  "version": "0.1.0",
  "description": "Strudel Kit MCP server scaffold with TypeScript, Vitest, and xmcp integration",
  "license": "MIT",
  "author": "Philliph Drummond",
  "type": "module",
  "main": "dist/server.js",
  "module": "dist/server.js",
  "types": "dist/server.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    }
  },
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.8.1",
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf dist coverage",
    "dev": "tsx watch --env-file=.env src/server.ts",
    "dev:debug": "cross-env NODE_OPTIONS=--inspect tsx watch --env-file=.env src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:coverage": "vitest run --coverage",
    "bmad:refresh": "npx bmad-method install -f -i codex",
    "bmad:list": "npx bmad-method list:agents",
    "bmad:validate": "npx bmad-method validate"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --check"
    ],
    "*.{js,json,md,yml,yaml}": [
      "prettier --check"
    ]
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "joi": "^17.13.3",
    "xmcp": "^0.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.4",
    "@eslint/js": "^8.57.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.11",
    "@vitest/coverage-v8": "^1.6.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "tsx": "^4.9.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.18.0",
    "vitest": "^1.6.0"
  }
}
