{
  "name": "mcp-strudel-kit",
  "version": "0.1.0",
  "description": "Foundation scaffolding for the Strudel Kit MCP Server",
  "private": true,
  "license": "MIT",
  "author": "Phil D",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.5.0"
  },
  "scripts": {
    "dev": "TSX_TEMPDIR=.tsx-tmp tsx watch src/server.ts",
    "build": "tsc -p tsconfig.build.local.json",
    "typecheck": "tsc --noEmit -p tsconfig.workspace.json",
    "lint": "eslint \"{src,tests}/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"{src,tests}/**/*.{ts,tsx}\" --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "format": "prettier --check \"**/*.{ts,tsx,js,json,md,yml,yaml}\"",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,json,md,yml,yaml}\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "joi": "^17.12.1",
    "tslib": "^2.6.2",
    "xmcp": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.7.0",
    "vitest": "^1.6.0"
  }
}
