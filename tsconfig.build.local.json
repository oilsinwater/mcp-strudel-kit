{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.workspace.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["tests", "**/*.test.ts", "**/*.spec.ts"]
}
